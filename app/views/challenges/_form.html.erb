<%= form_for @challenge, html: {class: 'pure-form', multipart: true} do |f| %>
  <fieldset>
    <%= f.label :title %>
    <%= f.text_field :title, size: 50 %>

    <%= f.label :poster %>
    <%= f.file_field :poster %>

    <%= f.label :body %>
    <%= f.text_area :body, rows: 20, cols: 80 %>

    <br><br>

    <%= f.submit 'Save', class: 'pure-button pure-button-primary' %>
  </fieldset>
<% end %>
